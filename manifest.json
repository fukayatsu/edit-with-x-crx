{
   "manifest_version": 2,
   "name": "Edit with X",
   "version": "0.0.1",
   "options_page": "pages/options.html",
   "permissions": [
      "tabs"
   ],
   "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": [
         "lib/jquery-2.0.3.min.js",
         "js/content_script.js"
      ]
   }],
   "background": {
      "scripts": [
         "js/background.js"
      ]
   },
   "browser_action": {
      "default_icon": "img/icon_128.png",
      "default_title": "Edit with X"
   },
   "icons": {
      "128": "img/icon_128.png",
      "48":  "img/icon_48.png"
   }
}